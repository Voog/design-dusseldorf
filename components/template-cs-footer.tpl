:root {
  /* VoogStyle
    "pathI18n": ["footer", "text"],
    "titleI18n": "size",
    "editor": "rangePicker",
    "min": 8,
    "max": 60,
    "unit": "px",
    "scope": "global",
    "featured": true
  */
  --footer-font-size: 14px;
  /* VoogStyle
     "pathI18n": ["footer", "text"],
     "titleI18n": "line_height",
     "editor": "rangePicker",
     "min": 0.8,
     "max": 3,
     "step": 0.1,
     "unit": "em",
     "scope": "global"
  */
  --footer-line-height: 1.7;
  /* VoogStyle
    "pathI18n": ["footer", "text"],
    "titleI18n": "font_weight",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "600",
      "off": "400"
    },
    "icon": "bold",
    "scope": "global"
  */
  --footer-font-weight: 400;
  /* VoogStyle
    "pathI18n": ["footer", "text"],
    "titleI18n": "font_style",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "italic",
      "off": "normal"
    },
    "icon": "italic",
    "scope": "global"
  */
  --footer-font-style: normal;
  /* VoogStyle
    "pathI18n": ["footer", "text"],
    "titleI18n": "text_transform",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "uppercase",
      "off": "none"
    },
    "icon": "uppercase",
    "scope": "global"
  */
  --footer-text-transform: none;
}
